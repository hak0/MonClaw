# Required: Telegram bot + remote OpenCode server
TELEGRAM_BOT_TOKEN=
OPENCODE_SERVER_URL=http://localhost:4096

# Optional: OpenCode auth and routing
OPENCODE_SERVER_USERNAME=
OPENCODE_SERVER_PASSWORD=
OPENCODE_DIRECTORY=/root/MonClaw
OPENCODE_AGENT=monclaw
OPENCODE_MODEL=

# Optional: App behavior
APP_NAME=monclaw
LOG_LEVEL=info
ENABLE_TELEGRAM=true

# Optional: Heartbeat scheduler
HEARTBEAT_INTERVAL_MINUTES=30
HEARTBEAT_TIMEOUT_SECONDS=90
HEARTBEAT_STARTUP_DELAY_SECONDS=60
HEARTBEAT_FILE=.data/heartbeat.md

# Optional: async_bash scheduler (queue worker)
ASYNC_BASH_QUEUE_DIR=.data/async-jobs
ASYNC_BASH_CONCURRENCY=1
ASYNC_BASH_REPORT_SECONDS=60
ASYNC_BASH_DEFAULT_TIMEOUT_MS=86400000

# Optional: Pairing and whitelist
WHITELIST_FILE=.data/whitelist.json
WHITELIST_PAIR_TOKEN=
PAIR_MAX_ATTEMPTS=5
PAIR_LOCK_MINUTES=15

# Optional: Telegram media inbox (voice/photo temp files)
INBOX_DIR=.data/inbox
INBOX_RETENTION_DAYS=7
